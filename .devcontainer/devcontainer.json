{
  "name": "co-lecione-dev-container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": []
    }
  },
  "forwardPorts": [4200, 5200],
  "postCreateCommand": "npm install --prefix server && npm install --prefix client",
  "mounts": [
    "source=${localWorkspaceFolder}/server,target=/workspace/server,type=bind",
    "source=${localWorkspaceFolder}/client,target=/workspace/client,type=bind"
  ]
}
